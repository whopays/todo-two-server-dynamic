{
  "name": "todo-two-server-dynamic",
  "version": "1.0.0",
  "description": "server implementation, connection to mongo and emitting response in graphql",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist/*",
    "dev": "nodemon dist --signal SIGKILL",
    "lint": "eslint . --ext .ts",
    "serve-debug": "nodemon --inspect dist",
    "start": "node ./dist",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\""
  },
  "engines": {
    "node": ">=22.11.0 <23.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whopays/todo-two-server-dynamic.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/whopays/todo-two-server-dynamic/issues"
  },
  "homepage": "https://github.com/whopays/todo-two-server-dynamic#readme",
  "dependencies": {
    "@apollo/server": "^4.1.1",
    "@graphql-tools/schema": "^9.0.13",
    "@typegoose/typegoose": "^10.0.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "graphql-ws": "^5.11.2",
    "mongoose": "^8.8.0",
    "typescript": "4.9.4",
    "uuid": "^9.0.0",
    "ws": "^8.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/node": "^18.11.9",
    "@types/uuid": "^9.0.0",
    "@types/ws": "^8.5.4",
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.1"
  }
}
